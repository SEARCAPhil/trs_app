.driver-list-menu
  background: #fff
  min-height: 40px
  float: left
  height: auto
  width: 100%
  box-shadow: 0px 1px 5px rgba(200,200,200,0.7)


.driver-list-menu ul > li > a
  color: #333 !important

.driver-list-menu ul > li
  float: left

.driver-list-menu ul > li.active
  background: #ccc

.driver-search-box, .vehicle-search-btn
  margin-top: 10px
  margin-bottom: 5px

.driver-search-btn
  background: #333
  color: rgb(250, 250, 250)