.home-section-text
  margin-top: 2vh

.car-box-container
  margin-bottom: 1px

.car-box
  display: flex;
  flex-flow: row wrap;

  > div
      box-sizing: border-box

  > div:first-child
      width: 100%
  
  > div:not(first-child)
      width: 30%
      padding: 10px

  >div:nth-child(3)
    width: 70%